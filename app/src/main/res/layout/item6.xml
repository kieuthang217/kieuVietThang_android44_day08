<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/bo_goc1"
    android:id="@+id/relativeRcv"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imgRcv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/imgTraitim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/traitim" />

    <TextView
        android:id="@+id/tvNameFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgRcv"
        android:layout_marginTop="10dp"
        android:text="bÃ²"
        android:textSize="20dp" />

    <RatingBar
        android:id="@+id/rating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNameFood"
        android:isIndicator="false"
        android:numStars="5"
        android:theme="@style/RatingBar" />
    <TextView
        android:id="@+id/tv"
        android:layout_below="@id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tvGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rating"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/tv"
        android:text="10.5"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/rating"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bo_goc"
        android:rotation="45">

        <ImageView
            android:layout_margin="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:rotation="-45"
            android:src="@drawable/add" />
    </LinearLayout>

</RelativeLayout>