<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:backgroundTint="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:paddingBottom="10dp"
        android:theme="?attr/actionBarTheme">

        <ImageView
            android:id="@+id/imgBackDetail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_margin="10dp"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/imgTraitimDetail"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:src="@drawable/traitim" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tvNameDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar2"
        android:layout_marginLeft="10dp"
        android:text="Ribeye steak"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/imgFoodDetail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tvNameDetail"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/ic_launcher"/>
    <RatingBar
        android:id="@+id/ratingDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:numStars="5"
        android:layout_below="@id/imgFoodDetail"
        />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgFoodDetail"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/ratingDetail"
        android:text="$"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvGiaDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgFoodDetail"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/tv"
        android:text="10.5"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/imgFoodDetail"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_buttom"
        android:rotation="45">

        <ImageView
            android:layout_margin="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:rotation="-45"
            android:src="@drawable/add" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratingDetail"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="The steak"
        android:textSize="20dp" />

</RelativeLayout>